@model UserChangePasswordViewModel
@{
}

<div class="row">
    <partial name="_UserPanelSideBar" />
    <div class="col-8 ml-3">

        <form class="w-50 mx-auto p-4 mt-3 shadow" asp-action="ChangePassword" method="post">
            <h4 class="text-center lead">Şifreyi Değiştir</h4>
            <div class="form-group">
                <label asp-for="@Model.OldPassword"></label>
                <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
                <input asp-for="@Model.OldPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                <input asp-for="@Model.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label>
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                <input asp-for="@Model.ConfirmPassword" class="form-control" />
            </div>


            <div class="text-danger" asp-validation-summary="ModelOnly">

            </div>

            <input type="submit" class="btn btn-primary" value="Şifreyi Değiştir" />
        </form>

    </div>
</div>

